<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обезьяна"
        android:textSize="24sp"
        android:textColor="?attr/colorPrimaryVariant"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageViewMonkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/monkey_image"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обезьяны - это группа приматов, которые обладают высокой степенью интеллекта и могут обитать в различных климатических зонах."
        android:textColor="?attr/colorOnBackground"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

