<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <ImageView
        android:id="@+id/imageMonkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/monkey_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textMonkeyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обезьяна"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- Описание обезьяны -->
    <TextView
        android:id="@+id/textMonkeyDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обезьяны — группа млекопитающих из отряда приматов. В биологической систематике название «обезьяны» может применяться по отношению ко всем представителям инфраотряда Simiiformes или подотряда Haplorhini"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:lineSpacingMultiplier="1.2"/>
</LinearLayout>
